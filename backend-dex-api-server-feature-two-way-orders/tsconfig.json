{
  "extends": "./node_modules/gts/tsconfig-google.json",

  "compilerOptions": {
    "target": "ES2021",
    "sourceMap": true,
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "jest-ts-auto-mock": ["../../index"]
    },
    "types": ["@types/node", "jest"],
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "plugins": [
      {"transform": "ts-auto-mock/transformer", "cacheBetweenTests": false}
    ],
    "pretty": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "**/*.(test|mock|specs).ts"],
  "files": ["src/types.ts"]
}
