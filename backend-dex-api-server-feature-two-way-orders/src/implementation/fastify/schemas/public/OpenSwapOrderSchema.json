{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "allOf": [
        {
            "properties": {
                "walletAddress": {
                    "type": "string"
                }
            },
            "required": [
                "walletAddress"
            ],
            "type": "object"
        },
        {
            "properties": {
                "collateralUtxo": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "walletRewardAddresses": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "walletUnusedAddresses": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "walletUsedAddresses": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            },
            "required": [
                "collateralUtxo",
                "walletUnusedAddresses",
                "walletUsedAddresses"
            ],
            "type": "object"
        },
        {
            "properties": {
                "toAssetId": {
                    "type": "string"
                }
            },
            "required": [
                "toAssetId"
            ],
            "type": "object"
        },
        {
            "properties": {
                "toAssetAmount": {
                    "type": "string"
                }
            },
            "required": [
                "toAssetAmount"
            ],
            "type": "object"
        },
        {
            "properties": {
                "fromAssetId": {
                    "type": "string"
                }
            },
            "required": [
                "fromAssetId"
            ],
            "type": "object"
        },
        {
            "properties": {
                "fromAssetAmount": {
                    "type": "string"
                }
            },
            "required": [
                "fromAssetAmount"
            ],
            "type": "object"
        },
        {
            "properties": {
                "fillFromAssetCount": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        {
            "properties": {
                "effectiveFromDate": {
                    "type": "string"
                },
                "effectiveUntilDate": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        {
            "properties": {
                "orderType": {
                    "enum": [
                        "FILL_BEST_AVAILABLE",
                        "FILL_DIRECT",
                        "LIMIT"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "orderType"
            ],
            "type": "object"
        }
    ]
}

